{
  "name": "aafu",
  "version": "2024.01.25",
  "description": "The aafu theme is a responsive portfolio with blog.",
  "main": "index.js",
  "keywords": [
    "hugo",
    "portfolio"
  ],
  "scripts": {
    "dev": "hugo server --gc --disableFastRender",
    "dev:drafts": "hugo server --gc --disableFastRender --buildFuture --buildDrafts",
    "build": "hugo --gc --cleanDestinationDir --minify",
    "start": "hugo server --gc --disableFastRender --renderStaticToDisk --cleanDestinationDir",
    "start:production": "hugo server --gc --disableFastRender --renderStaticToDisk --cleanDestinationDir --environment production --minify",
    "npm-check": "npm-check -u"
  },
  "author": "Darshan Baral",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "exec": "^0.2.1",
    "exec-bin": "^1.0.0",
    "hugo-installer": "^4.0.1",
    "npm-check": "^6.0.1"
  }
}
